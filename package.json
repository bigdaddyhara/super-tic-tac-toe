{
  "name": "super-ultimate-tictactoe",
  "version": "0.1.0",
  "private": true,
  "description": "Web-based Super/Ultimate Tic-Tac-Toe built with Vite + TypeScript (vanilla).",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint --ext .ts src tests --max-warnings=0",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit -p tsconfig.app.json",
    "release:check": "npm run build && npm run typecheck && npm test",
    "deploy:gh-pages": "npx gh-pages -d dist",
    "deploy:gh-pages:subtree": "git subtree push --prefix dist origin gh-pages"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "ws": "^8.13.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
